#!/usr/bin/env bash

set -euo pipefail

packages=(
  ack
  automake
  bash
  bash-completion
  bdw-gc
  bison
  boost
  chruby
  coreutils
  ctags
  dos2unix
  emacs
  ffmpeg
  fswatch
  fzf
  geoip
  gist
  git
  graphviz
  grep
  gsl
  htop
  hub
  imagemagick
  jq
  leiningen
  libev
  little-cms
  llvm
  netcat
  openjdk
  parallel
  pkg-config
  plantuml
  postgres
  pre-commit
  pv
  reattach-to-user-namespace
  redis
  ripgrep
  ruby-install
  shellcheck
  shunit2
  sloccount
  swi-prolog
  tcpflow
  tmux
  tree
  unzip
  vim
  watch
  wget
  yarn
)

for p in "${packages[@]}"; do
  brew install "$p"
done

wget https://raw.github.com/postmodern/gem_home/master/homebrew/gem_home.rb
brew install --HEAD -s gem_home.rb

cask_packages=(
  alfred
  bluesnooze
  evernote
  flux
  iterm2
  mactex
  shiftit
  spotify
  vlc
)

brew tap homebrew/cask

for p in "${cask_packages[@]}"; do
  brew install --cask "$p"
done
